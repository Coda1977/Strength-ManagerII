# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Service Configuration
RESEND_API_KEY=re_your-resend-api-key-here

# Session Configuration
SESSION_SECRET=your-secure-session-secret-here

# Application Configuration
NODE_ENV=production
PORT=5000

# Replit Configuration (automatically set in Replit environment)
REPL_ID=your-repl-id
REPL_SLUG=your-repl-slug
REPLIT_DOMAIN=your-repl-domain.replit.app

# Email Configuration
FROM_EMAIL=onboarding@yourdomain.com
REPLY_TO_EMAIL=support@yourdomain.com

# AI Configuration
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.jpg,.png

# Timezone Configuration
DEFAULT_TIMEZONE=America/New_York
EMAIL_SEND_TIME=09:00